{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2022"
        ],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "newLine": "lf",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src",
        "vite.config.ts"
    ]
}
